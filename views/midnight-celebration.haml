- content_for :title do "Midnight Celebration" end
- content_for :pagecss do
  :css
    @import url(http://fonts.googleapis.com/css?family=Tulpen+One); /* Dorsa */
    body {
      margin: 0;
      padding: 0;
      background-color: rgb(0,23,54);
    }
    .container {
      margin: 0;
      padding: 0;
      width: 100%;
    }
    .jumbotron {
      margin: 100px 0 0;
      height: 400px;
      background: -webkit-linear-gradient(top, #001736 0%,#003c6c 50%,#001736 100%);
    }
    .jumbotron h1 {
      margin: 60px 0 10px;
      font-family: 'Tulpen One', cursive;
      color: #fff;
      text-shadow: 0 2px 3px rgba(63,107,169, 0.7);
      font-size: 100px;
      -webkit-mask-image: -webkit-linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,.6) 40%, rgba(0,0,0,.1));
    }
    .jumbotoron section .mini {
      font-size: 16px;
      color: #fff;
    }
    .soundcloud {
      width: 600px;
      margin: 60px auto 0;
    }

.container
  .jumbotron
    %h1.text-center
      Midnight Celebration
    %section.text-center
      %span.mini{style: "color:rgba(111,146,172,.6); font-size:18px;"}
        Musics of the blissful night.
    .soundcloud
      %iframe{frameborder: "no", height: "350", scrolling: "no", src: "https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/40707901&color=ff5500&auto_play=true&hide_related=false&show_artwork=true&show_comments=true&show_user=true&show_reposts=false", width: "100%"}
