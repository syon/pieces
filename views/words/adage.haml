- content_for :title do "心に響く言葉" end
- content_for :webfont do
  %link{href: "//fonts.googleapis.com/css?family=Open+Sans:300", rel: "stylesheet", type: "text/css"}
- content_for :pagecss do
  :css
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, YuMincho, serif;
      background-color: #eee;
      background: #303e54 url(./images/StarryLake.jpg) no-repeat center top;
      background-size: cover;
      background-attachment: fixed;
    }
    #header {
      color: #fff;
      -webkit-font-smoothing: antialiased;
      text-align: center;
      padding: 4em 0;
      border-bottom: 8px solid #0F2B44;
    }
    #header h1 {
      letter-spacing: .2em;
      text-indent: .3em;
      font-weight: 400;
      font-size: 500%;
      margin: .1em 0;
    }
    #header h2 {
      letter-spacing: -0.00em;
      font-weight: 300;
      font-style: normal;
      font-size: 32px;
      line-height: 1.5;
      margin: 20px auto;
      max-width: 700px;
      font-family: 'Open Sans', sans-serif;
    }
    .wrapper {
      background-color: rgba(37, 69, 95, 0.97);
    }
    #adages {
      max-width: 700px;
    }
    .messages {
      font-size: 24px;
      color: #444;
    }
    .messages h3:after {
      content: " ";
      display: block;
      position: relative;
      top: -30px;
      border-bottom: 4px solid #ca6;
    }
    .messages dl {
      margin: 2em 0 3em;
      background-color: rgba(255,255,255,0.8);
      padding: 1em;
      border-radius: 3px;
    }
    .messages dl dt {
      letter-spacing: -0.02em;
      margin: 0 0 0.5em;
    }
    .messages dl dd {
      letter-spacing: -0.04em;
      font-size: 16px;
      color: #444;
      padding: 5px;
      text-align: right;
    }
    .messages dl dd a {
      color: inherit;
    }


